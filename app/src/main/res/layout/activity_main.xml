<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mines.ryhunt.wifidistanceestimator.MainActivity">

    <ListView
        android:id="@+id/activityMain_scanResultListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <edu.mines.ryhunt.wifidistanceestimator.MapView
        android:id="@+id/activityMain_floorplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/basement" />

    <TextView
        android:id="@+id/activityMain_positionEstimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

</android.widget.LinearLayout>
